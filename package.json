{
  "name": "n8n-nodes-claudecode-enhanced",
  "version": "1.0.0",
  "description": "Enhanced n8n node for Claude Code with native authentication, advanced MCP support, and enterprise features",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "claude",
    "claude-code",
    "ai",
    "anthropic",
    "mcp",
    "model-context-protocol",
    "authentication",
    "enhanced",
    "enterprise"
  ],
  "license": "MIT",
  "homepage": "https://github.com/shaike1/n8n-claudecode#readme",
  "bugs": {
    "url": "https://github.com/shaike1/n8n-claudecode/issues"
  },
  "author": {
    "name": "Shaike1",
    "email": "enhanced@shaike1.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shaike1/n8n-claudecode.git"
  },
  "engines": {
    "node": ">=20.15"
  },
  "main": "index.js",
  "scripts": {
    "build": "npx rimraf dist && tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes --write",
    "lint": "eslint nodes package.json",
    "lintfix": "eslint nodes package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/ClaudeCode/ClaudeCode.node.js",
      "dist/nodes/ClaudeCode/ClaudeCodeEnhanced.node.js"
    ],
    "credentials": [
      "dist/credentials/ClaudeCodeApi.credentials.js",
      "dist/credentials/MCPServer.credentials.js"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "latest",
    "@anthropic-ai/sdk": "^0.28.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.9",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}